<% if logged_in? %>
  <div class="row">
    
    <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %> :<%= task.content %><%= task.status %></li>
    <% end %>
    </ul>
    <%= link_to '新規メッセージの投稿', new_task_path %>
  </div>
<% else %>
  <div class="bg-secondary p-3 p-sm-5 my-4 rounded">
    <div class="text-center text-white">
      <h1>Welcome to the Tasks</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>